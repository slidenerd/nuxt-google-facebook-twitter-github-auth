    "cross-env": "^6.0.3",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "nuxt": "^2.10.2",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.11",
    "passport-google-oauth2": "^0.2.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "redis": "^3.1.1",
    "supertest": "^4.0.2"
  },
